{
  "name": "cc-model-switcher",
  "version": "0.1.1",
  "type": "module",
  "description": "A tray application for managing Claude Code model configurations",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rasenjs/ccms.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "model-switcher",
    "electron",
    "tray-app",
    "anthropic",
    "kimi",
    "glm",
    "deepseek",
    "copilot"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rasenjs/ccms/issues"
  },
  "homepage": "https://github.com/rasenjs/ccms#readme",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:cli": "tsc -p tsconfig.cli.json",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "cli": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "gen:icons": "node scripts/generate-icons.mjs",
    "release": "release-it",
    "release:ci": "release-it --ci"
  },
  "bin": {
    "ccms": "./dist/cli/index.js"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.3",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "release-it": "^19.1.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.6"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "electron-store": "^8.1.0",
    "i18next": "^23.16.8",
    "lucide-react": "^0.560.0",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.3.1"
  },
  "build": {
    "appId": "com.claudecode.modelswitcher",
    "productName": "Claude Code Model Switcher",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
