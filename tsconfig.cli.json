{
  "compilerOptions": {
    "outDir": "./dist/cli",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": [
    "src/cli/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
